@model NoteApp.Models.Dashboard.IndexModel
<div class="modal fade" id="newNote-modal" tabindex="-1" aria-labelledby="CreateNewNote" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="create-new-note" asp-action="Index" asp-controller="Dashboard">
                <div class="modal-body">
                    <div class="mb-3">
                        <input asp-for="NoteTitle" type="text" placeholder="Note name" class="form-control" id="recipient-name">
                    </div>
                </div>
            </form>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button form="create-new-note" type="submit" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>