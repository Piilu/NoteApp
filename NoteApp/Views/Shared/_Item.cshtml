@model NoteApp.Data.Entities.Note
<div class="card shadow" style="width:25em">
    <div class="card-body">
        <div class="d-flex ">
            <div><h5 class="card-title">@Model.Title</h5></div>
            <a href="/Dashboard/Delete/@Model.Id" style="margin-left:auto"><i class="fa-solid fa-xmark"></i></a>
        </div>
       

        @if (Model.Content == null || Model.Content == "")
        {
            <p class="card-text opacity-25">Empty Note</p>
        }
        else
        {
            <p class="card-text">@Model.Content</p>
        }

        <a href="/Dashboard/Note/@Model.Id" class="btn btn-primary">Open</a>
    </div>
</div>